{
  "name": "living-garden",
  "version": "1.0.0",
  "description": "Interactive stream overlay that responds to Twitch chat events",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "npm run build && playwright test",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "check": "npm run typecheck && npm run lint && npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@pixi/particle-emitter": "^5.0.8",
    "@streamerbot/client": "^1.5.0",
    "pixi.js": "^8.6.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jsdom": "^28.1.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.56.0",
    "vite": "^6.0.7",
    "vitest": "^4.0.18"
  }
}
